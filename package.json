{
  "name": "@3fv/deferred",
  "version": "1.2.3",
  "description": "A reusable deferred",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "test ! -e index.d.ts && bash -c \"mkdir -p lib && cp package.json lib && tsc -b tsconfig.json\"",
    "build:watch": "yarn run build -- --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "postversion": "./scripts/release.sh $npm_package_version",
    "//release": "yarn build && yarn test && yarn version --patch --non-interactive",
    "release": "yarn build && yarn version --patch --non-interactive"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "**/*.d.ts",
    "**/*.js",
    "**/*.map",
    "package.json",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/3fv/guard.git"
  },
  "keywords": [
    "typescript",
    "promise",
    "deferred",
    "defer"
  ],
  "author": "Jonathan Glanz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/3fv/deferred/issues"
  },
  "homepage": "https://github.com/3fv/deferred#readme",
  "peerDependencies": {
    "@3fv/guard": "^1.0.16",
    "assert": "^2.0.0"
  },
  "devDependencies": {
    "@3fv/guard": "^1.0.16",
    "@types/jest": "^24.0.23",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.12.17",
    "assert": "^2.0.0",
    "jest": "^24.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.3"
  }
}
